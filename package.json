{
  "name": "@novivia/build-module",
  "role": "module-builder",
  "version": "0.5.1",
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "description": "Novivia Node.js module builder and packager.",
  "authors": [
    "Mathieu M-Gosselin <mathieumg@novivia.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:Novivia/tools.module-builder.git"
  },
  "scripts": {
    "build": "./cliWrapper build",
    "lint": "novivia-linter lint",
    "pub": "./cliWrapper publish",
    "release": "./cliWrapper release"
  },
  "bin": {
    "novivia-builder": "./cliWrapper"
  },
  "novivia-builder": {
    "babelPatterns": [
      "cli.js"
    ],
    "packagePatterns": [
      "cliWrapper"
    ]
  },
  "novivia-linter": {
    "targets": {
      "global": [
        "lib",
        "cli.js"
      ]
    },
    "options": ""
  },
  "devDependencies": {
    "@novivia/linter": "^1.6.0"
  },
  "dependencies": {
    "@novivia/babel": "0.0.3",
    "babel-core": "^6.18.0",
    "better-log": "^1.3.3",
    "bluebird": "^3.4.6",
    "chalk": "^1.1.3",
    "fs-extra": "^0.30.0",
    "fstream": "^1.0.10",
    "json5": "^0.5.0",
    "lodash": "^4.16.4",
    "micromatch": "^2.3.11",
    "node-uuid": "^1.4.7",
    "pkginfo-json5": "^0.5.0",
    "tar": "^2.2.1",
    "tempura": "^0.0.8",
    "walkdir": "^0.0.11",
    "yargs": "^6.3.0"
  }
}